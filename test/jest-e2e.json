{
  "moduleFileExtensions": ["js", "json", "ts"],
  "collectCoverageFrom": [
    "**/src/**/*.{js,ts}",
    "!**/src/main.ts",
    "!**/src/*.spec.ts",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "roots": ["<rootDir>/"],
  "moduleNameMapper": {
    "^@services(.*)$": "<rootDir>/src/services/$1",
    "^@common(.*)$": "<rootDir>/src/common/$1"
  }
}
